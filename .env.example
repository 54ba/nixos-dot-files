# NixOS Configuration Environment Variables
# Copy this file to .env and update with your actual values
# NOTE: Never commit .env to version control

# ===== SYSTEM CONFIGURATION =====

# System hostname (used in configuration.nix and flake.nix)
NIXOS_HOSTNAME=your-laptop-hostname

# Primary user account
NIXOS_USERNAME=your-username
NIXOS_USER_DESCRIPTION="Your Full Name"
NIXOS_USER_HOME=/home/your-username

# ===== NETWORK CONFIGURATION =====

# Timezone configuration
NIXOS_TIMEZONE=Your/Timezone  # e.g., America/New_York, Europe/London, Asia/Tokyo

# Locale settings
NIXOS_LOCALE=en_US.UTF-8

# Network interface name (optional)
NIXOS_NETWORK_INTERFACE=wlan0  # or eth0, enp0s3, etc.

# DNS servers (optional, defaults to Google DNS)
NIXOS_DNS_PRIMARY=8.8.8.8
NIXOS_DNS_SECONDARY=8.8.4.4

# ===== DEVELOPMENT CONFIGURATION =====

# Git repository URL (for cloning configuration)
NIXOS_REPO_URL=https://github.com/your-username/your-nixos-config.git

# Development paths
NIXOS_CONFIG_PATH=/etc/nixos
NIXOS_HOME_MANAGER_CONFIG=./home-manager.nix

# ===== SECURITY SETTINGS =====

# SSH public keys (space-separated if multiple)
NIXOS_SSH_PUBLIC_KEYS="ssh-rsa AAAAB3NzaC1yc2E... your-key-comment"

# Firewall ports (comma-separated)
NIXOS_FIREWALL_TCP_PORTS=22,80,443
NIXOS_FIREWALL_UDP_PORTS=53,123,68

# ===== AI SERVICES =====

# Ollama configuration
NIXOS_OLLAMA_HOST=localhost
NIXOS_OLLAMA_PORT=11434

# ===== HARDWARE SPECIFIC =====

# GPU vendor (nvidia, intel, amd)
NIXOS_GPU_VENDOR=nvidia

# Hardware model for optimizations
NIXOS_HARDWARE_MODEL=lenovo-s540-gtx-15iwl  # or generic

# ===== OPTIONAL SERVICES =====

# External service endpoints (if used)
NIXOS_BACKUP_ENDPOINT=your-backup-service.com
NIXOS_MONITORING_ENDPOINT=your-monitoring.com

# Container registry (if using private containers)
NIXOS_CONTAINER_REGISTRY=your-registry.com

# ===== BUILD CONFIGURATION =====

# Build cache servers (additional to defaults)
NIXOS_EXTRA_BINARY_CACHES="https://your-cache.cachix.org"
NIXOS_EXTRA_PUBLIC_KEYS="your-cache.cachix.org-1:your-key-here"

# Build settings
NIXOS_MAX_JOBS=4
NIXOS_CORES=4

# ===== FEATURE FLAGS =====

# Enable/disable major features (true/false)
NIXOS_ENABLE_AI_SERVICES=true
NIXOS_ENABLE_GAMING=false
NIXOS_ENABLE_DEVELOPMENT=true
NIXOS_ENABLE_MEDIA=true
NIXOS_ENABLE_PENTEST=false

# ===== FLAKE CONFIGURATION =====

# Flake inputs (advanced users only)
NIXOS_NIXPKGS_BRANCH=nixos-25.05
NIXOS_HOME_MANAGER_BRANCH=release-25.05

# Example usage in documentation:
# Instead of: sudo nixos-rebuild switch --flake .#mahmoud-laptop
# Use: sudo nixos-rebuild switch --flake .#${NIXOS_HOSTNAME}

# Instead of: home-manager switch --flake .#mahmoud  
# Use: home-manager switch --flake .#${NIXOS_USERNAME}
